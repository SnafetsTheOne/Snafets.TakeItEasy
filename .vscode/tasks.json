{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build API",
      "command": "dotnet",
      "type": "process",
      "args": ["build"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run API",
      "type": "shell",
      "command": "dotnet",
      "args": ["run", "--project", "src/Snafets.TakeItEasy.Api"],
      "group": "build",
      "problemMatcher": ["$msCompile"],
      "dependsOn": ["Build API"],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Run API Unit Tests",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test",
        "tests/Snafets.TakeItEasy.UnitTests/Snafets.TakeItEasy.UnitTests.csproj",
        "--collect:XPlat Code Coverage"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Run API Integration Tests",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test",
        "tests/Snafets.TakeItEasy.IntegrationTests/Snafets.TakeItEasy.IntegrationTests.csproj",
        "--collect:XPlat Code Coverage"
      ],
      "group": {
        "kind": "test"
      },
      "problemMatcher": ["$msCompile"],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Build UI",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/src/snafets-take-it-easy-next-js"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Build API and UI",
      "dependsOn": ["Build API", "Build UI"],
      "type": "shell",
      "command": "echo 'Both API and UI are built.'",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run UI",
      "type": "shell",
      "command": "npm run dev",
      "dependsOn": ["Build UI"],
      "options": {
        "cwd": "${workspaceFolder}/src/snafets-take-it-easy-next-js"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run API and UI",
      "dependsOn": ["Run API", "Run UI"],
      "type": "shell",
      "command": "echo 'Both API and UI are running.'",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ]
}
