{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run API",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/src/api/Snafets.TakeItEasy.Api/bin/Debug/net9.0/Snafets.TakeItEasy.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/api/Snafets.TakeItEasy.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://.*)",
        "uriFormat": "%s/swagger"
      },
      "preLaunchTask": "Build API",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    {
      "name": "Run UI",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "cwd": "${workspaceFolder}/src/ui",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Local:\\s*(https?://localhost:[0-9]+)",
        "uriFormat": "%s"
      }
    }
  ],
  "compounds": [
    {
      "name": "Run API and UI",
      "configurations": ["Run API", "Run UI"]
    }
  ]
}
