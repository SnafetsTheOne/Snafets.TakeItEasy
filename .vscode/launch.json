    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run API with Swagger UI",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/Snafets.TakeItEasy.Api/bin/Debug/net9.0/Snafets.TakeItEasy.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Snafets.TakeItEasy.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
            "pattern": "Now listening on: (https?://.*)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }

    ]
}